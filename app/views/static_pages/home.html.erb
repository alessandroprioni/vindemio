<% provide(:title,"Home") %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/wine_form' %>
      </section>
    </aside>
  </div>
<% else %>
	<div class="jumbotron center">
	  <div class="container">
	    <h1><b>VINDEMIO</b></h1>
	    <p>Never forget the great wine you've just drunk!</p>
	    <p><%= link_to "Sign Up", signup_path, class: "btn btn-primary btn-lg" %></p>
	  </div>
	</div>
<% end %>