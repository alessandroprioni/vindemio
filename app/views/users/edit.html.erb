<% provide(:title, 'Edit User') %>
<div class="row">
  <div class="large-12 columns center">
    <h1>Update your profile</h1>
  </div>
</div>

<div class="row">
  <div class="large-8 large-offset-2 columns">
    <%= form_for(@user) do |f| %>
	  	<%= render 'fields', f: f %>
      <%= f.submit "Save Changes", class: "button" %>
    <% end %>
  </div>
</div>